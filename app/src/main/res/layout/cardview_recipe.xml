<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp"
    android:layout_margin="15dp"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/card_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/cardview_dark_background"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <TextView
                android:id="@+id/cardview_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Judul Makanan"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/cardview_headline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="headlines"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="3dp"/>

            <TextView
                android:id="@+id/cardview_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="deskripsi"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginTop="5dp"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/cardview_calories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="calories"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/cardview_fats"/>

            <TextView
                android:id="@+id/cardview_fats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="fats"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/cardview_proteins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="proteins"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_below="@id/cardview_calories"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp"
                android:layout_toStartOf="@id/cardview_fats"/>

            <TextView
                android:id="@+id/cardview_carbos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="carbos"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_toEndOf="@id/cardview_proteins"
                android:layout_below="@id/cardview_fats"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/cardview_difficulty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:hint="5"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"/>

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>